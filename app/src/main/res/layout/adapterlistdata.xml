<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/primary_200"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:id="@+id/relatifMain">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:src="@drawable/logo"
                android:id="@+id/imageProduk"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayam Krispi"
                android:layout_below="@id/imageProduk"
                android:layout_centerInParent="true"
                android:textSize="14dp"
                android:textStyle="bold"
                android:id="@+id/lb_nameProduct"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 100.000"
                android:layout_below="@id/lb_nameProduct"
                android:layout_centerInParent="true"
                android:textSize="16dp"
                android:textStyle="bold"
                android:id="@+id/lb_priceProduk"/>
        </RelativeLayout>

        </androidx.cardview.widget.CardView>
